<%- contentFor('body')%>

<% produtos.forEach(function (produto) {%>

<div class="card shadow-sm">
    <%if(produto.foto) { %>
        <img src="<%=produto.foto%>" alt="imagem do produto">
    <% } else {%>
    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Imagem Indispon√≠vel</text></svg>
    <% } %>
    <div class="card-body">
        <h5><%=produto.nome%></h5>
        <p class="card-text"><%=produto.descricao%></p>
        <div class="d-flex justify-content-between align-items-center">
            <p>R$<%=produto.preco%></p>
        </div>
    </div>
</div>

<% }) %>